db.restos.aggregate([
	{
		$unwind: "$plats"
	},
	{
		$group:{
			_id:
				"$plats"
		}
	},
	{
		$match:{
			"_id.daty":{
				$lte: new Date(2022, 04, 07, 23, 00)
			}
		}
	},
	{
		$sort:{
			"_id.daty": -1
		}
	},
	{
		$group:{
			_id: "$_id.plat",
			doc: {
				$first: '$$ROOT'
			}
		},
	},
	{
		"$replaceRoot": {
			"newRoot": "$doc"
		}
	}]).pretty(),
	{
		$project:{
			maxDaty:{
				$dateToString:{
					format: "%d/%m/%Y %H:%M:%S",
					date: "$_id.daty"
				}
			}
		}
	}
]).pretty()



		